<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@android:color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/jsonSnack_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:id="@+id/textViewJson_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:background="#000000"
            android:padding="16dp"
            android:text="File downloading, please wait.."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/retry_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Retry" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/form_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleY="3"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/snack_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="2">

        <TextView
            android:id="@+id/textview_one"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.7"
            android:background="#000000"
            android:padding="16dp"
            android:text="Form downloading please wait."
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:text="Dismiss" />

